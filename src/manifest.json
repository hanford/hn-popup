{
  "name": "hn-popup",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Browse hn from anywhere",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://news.ycombinator.com/*?mobile=true"
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/*?mobile=true"],
      "js": ["ua-override.js"],
      "run_at" : "document_start",
      "all_frames": true
    }
  ]
}
